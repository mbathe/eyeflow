# EyeFlow Configuration

# Node.js Server
NODE_ENV=development
SERVER_PORT=3000
SERVER_HOST=localhost

# Database
DATABASE_URL=postgresql://eyeflow:eyeflow_password@postgres:5432/eyeflow
DATABASE_USER=eyeflow
DATABASE_PASSWORD=eyeflow_password
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=eyeflow

# Redis
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# JWT & Auth
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRY=7d

# WebSocket
WS_URL=http://localhost:3000

# Python Agent
AGENT_HOST=0.0.0.0
AGENT_PORT=4000

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Email (optional)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# General
ENVIRONMENT=development
API_VERSION=v1
